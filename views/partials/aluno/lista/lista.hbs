<div class="p-5">

    <table id="myTable" class="display">
        <thead>
            <tr>
                <th>Titulo</th>
                <th>Conteudo</th>
                <th>Visualizar</th>
            </tr>
        </thead>
        <tbody>
            {{#each people}}
            <tr>
                <td>{{titulo}}</td>
                <td>{{conteudo}}</td>
                <td><a class="btn btn-primary" onClick="visualizar({{id}})">Ver</a></td>
            </tr>
            {{/each}}
        </tbody>
    </table>

<script>
    $(document).ready(function() {
        $('#myTable').DataTable({
            "language": {
                "url": "https://cdn.datatables.net/plug-ins/1.11.5/i18n/Portuguese-Brasil.json"
            }
        });
    });

    function visualizar(){

        /*

        Aqui mostra um modal em boostrap com a mensagem
        */

        Swal.fire({
            title: "Aviso!",
            text: "Teste de visualização",
            icon: "warning"
        });


    }

</script>


</div>